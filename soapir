#!/usr/bin/env python3
import soap
from soap import (
    IntegerInterval, FloatInterval, FractionInterval, ErrorSemantics, mpz,
    mpq, mpfr, mpz_type, mpq_type, mpfr_type, inf, ulp, cast, BoxState, expr,
    flow, closure, expand, reduce, parsings, martel_trace, greedy_trace,
    frontier_trace, logger
)


def pr(*args):
    with soap.logger.info_context():
        soap.logger.info(*args)
ps = lambda *args: pr(*[str(a) for a in args])


I = Int = IntegerInterval
F = Float = FloatInterval
E = Error = ErrorSemantics
S = Box = BoxState


if __name__ == '__main__':
    from soap.shell import Shell, trace
    with logger.info_context():
        Shell()()
